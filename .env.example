# MLOps Fraud Detection - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================================================
# MLflow Configuration
# =============================================================================
# URI for MLflow tracking server
# Local SQLite: sqlite:///mlruns.db
# Remote server: http://mlflow-server:5000
MLFLOW_TRACKING_URI=sqlite:///mlruns.db

# MLflow experiment name
MLFLOW_EXPERIMENT_NAME=fraud-detection

# S3 bucket for MLflow artifact storage (if using remote storage)
# MLFLOW_S3_BUCKET=s3://my-mlflow-artifacts

# =============================================================================
# Model Configuration
# =============================================================================
# Path to the trained model file
MODEL_PATH=models/random_forest_final_model.joblib

# Model version to load (if using MLflow model registry)
# MODEL_VERSION=1

# Model stage (if using MLflow model registry)
# MODEL_STAGE=Production

# =============================================================================
# API Server Configuration
# =============================================================================
# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Enable API documentation endpoints
API_DOCS_ENABLED=true

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# =============================================================================
# Logging Configuration
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/fraud_detection.log

# Maximum log file size (MB)
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# Data Configuration
# =============================================================================
# Path to data directory
DATA_DIR=data

# Path to feature store metadata
FEATURE_STORE_PATH=data/selected_features.json

# Maximum rows to process in batch inference
BATCH_SIZE=10000

# =============================================================================
# Drift Detection Configuration
# =============================================================================
# Enable drift detection
ENABLE_DRIFT_DETECTION=true

# Drift detection threshold (p-value)
DRIFT_THRESHOLD=0.05

# Drift check interval (hours)
DRIFT_CHECK_INTERVAL=24

# =============================================================================
# Database Configuration (Optional)
# =============================================================================
# PostgreSQL connection string (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection

# MongoDB connection string (if using MongoDB for logging)
# MONGODB_URI=mongodb://localhost:27017/fraud_detection

# =============================================================================
# External Services (Optional)
# =============================================================================
# Slack webhook for alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email configuration for alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL_TO=team@example.com

# Prometheus pushgateway URL (if using Prometheus)
# PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# =============================================================================
# Cloud Provider Configuration (Optional)
# =============================================================================
# AWS Configuration
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-s3-bucket

# GCP Configuration
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BUCKET=your-gcs-bucket

# Azure Configuration
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_CONTAINER_NAME=your-container

# =============================================================================
# Security Configuration
# =============================================================================
# API authentication token (if implementing auth)
# API_TOKEN=your-secure-random-token

# JWT secret key (if implementing JWT auth)
# JWT_SECRET_KEY=your-jwt-secret-key
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=60

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode (NEVER use in production!)
DEBUG=false

# Enable hot reload for development
RELOAD=false

# Number of worker processes
WORKERS=1

# =============================================================================
# Testing Configuration
# =============================================================================
# Use test database/artifacts during testing
# TEST_MODE=false
# TEST_DATA_PATH=tests/fixtures/test_data.csv
